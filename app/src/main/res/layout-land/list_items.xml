<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/padres_light"
    android:minHeight="88dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_image"
        style="@style/ListImageStyle"
        android:contentDescription="@string/item_images" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selected_text"
            style="@style/SelectedTextStyle" />

        <TextView
            android:id="@+id/choice_header"
            style="@style/ChoiceHeaderStyle" />
    </LinearLayout>
</LinearLayout>
